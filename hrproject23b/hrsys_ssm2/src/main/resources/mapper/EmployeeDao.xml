<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lz08.hrsys_ssm2.dao.EmployeeDao">
<!--    多条件查询-->
    <select id="search" resultMap="EmpAndDep">
        select e.*,d.name as depName
        ,d.number as depNumber from
        employee as e left join department as d on
        e.dep_id=d.id
        where 1=1
        <if test="number!=null and  number!=''">
            and e.number=#{number}
        </if>
        <if test="name!=null and name!=''">
            and e.name like '%${name}%'
        </if>
        <if test="gender!=null and gender!=''">
            and e.gender=#{gender}
        </if>
        <if test="age!=null and age!=''">
            and e.age=#{age}
        </if>
        <if test="dep!=null and dep.id!=null">
            and e.dep_id=#{dep.id}
        </if>
        order by e.id
    </select>

<!--    根据ID查询-->
    <select id="searchById" resultMap="EmpAndDep">
        select e.*,d.name as depName,d.number as depNumber from
            employee as e left join department as d on e.dep_id=d.id where
            e.id=#{id}
    </select>

    <resultMap type="com.lz08.hrsys_ssm2.entity.Employee" id="EmpAndDep">
        <id property="id" column="id" />
        <result property="number" column="number" />
        <result property="name" column="name" />
        <result property="gender" column="gender" />
        <result property="age" column="age" />
        <association property="dep" javaType="com.lz08.hrsys_ssm2.entity.Department">
            <id property="id" column="dep_id" />
            <result property="number" column="depNumber" />
            <result property="name" column="depName" />
        </association>
    </resultMap>

<!--    新增-->
    <insert id="add">
        insert into employee
            (number,name,gender,age,dep_id)values(#{number},#{name},#{gender},#{age},#{dep.id})
    </insert>

<!--    删除-->
    <delete id="delete">
        delete from employee where id=#{id}
    </delete>

<!--    更新-->
    <update id="update">
        update employee set
            number=#{number},name=#{name},gender=#{gender},age=#{age},dep_id=#{dep.id} where  id=#{id}
    </update>

<!--    更新部门-->
    <update id="updateByDep">
        update employee set
            dep_id=null where
            dep_id=#{depId}
    </update>

</mapper>
